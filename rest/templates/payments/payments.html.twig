{% extends 'base.html.twig' %}

{% block title %}Lista de Pagos{% endblock %}

{% block body %}
<h1>Pagos</h1>
<hr class="bg-dark">
<table class="table table-striped table-hover">
    <tr>
        <th scope="col">Numero</th>
        <th scope="col">Fecha</th>
        <th scope="col">Monto</th>
    </tr>

    {% for payments in lista %}
    <tr>
        <th scope="col">{{ payments.checknumber }}</th>
        <th scope="col">{{ payments.paymentdate }}</th>
        <th scope="col">{{ payments.amount }}</th>
    </tr>   
    {% endfor %}
</table>
    
{% endblock %}
