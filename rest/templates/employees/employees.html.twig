{% extends 'base.html.twig' %}

{% block title %}Lista de Empleados{% endblock %}

{% block body %}
<h1>Empleados</h1>
<hr class="bg-dark">
<table class="table table-striped table-hover">
    <tr>
        <th scope="col">Número</th>
        <th scope="col">Apellido</th>
        <th scope="col">Nombre</th>
        <th scope="col">Extensión</th>
        <th scope="col">Correo</th>
        <th scope="col">Título de Trabajo</th>
    </tr>

    {% for employees in lista %}
    <tr>
        <th scope="col">{{ employees.employeenumber }}</th>
        <th scope="col">{{ employees.lastname }}</th>
        <th scope="col">{{ employees.firstname }}</th>
        <th scope="col">{{ employees.extension }}</th>
        <th scope="col">{{ employees.email }}</th>
        <th scope="col">{{ employees.jobtitle }}</th>
    </tr>   
    {% endfor %}
</table>
    
{% endblock %}
