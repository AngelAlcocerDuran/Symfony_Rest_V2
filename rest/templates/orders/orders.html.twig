{% extends 'base.html.twig' %}

{% block title %}Lista de Pedidos{% endblock %}

{% block body %}
<h1>Pedidos</h1>
<hr class="bg-dark">
<table class="table table-striped table-hover">
    <tr>
        <th scope="col">Número</th>
        <th scope="col">Fecha</th>
        <th scope="col">Fecha de Petición</th>
        <th scope="col">Fecha de Envío</th>
        <th scope="col">Estado</th>
        <th scope="col">Comentarios</th>
    </tr>

    {% for orders in lista %}
    <tr>
        <th scope="col">{{ orders.ordernumber }}</th>
        <th scope="col">{{ orders.orderdate }}</th>
        <th scope="col">{{ orders.requireddate }}</th>
        <th scope="col">{{ orders.shippeddate }}</th>
        <th scope="col">{{ orders.status }}</th>
        <th scope="col">{{ orders.comments }}</th>
    </tr>   
    {% endfor %}
</table>
    
{% endblock %}
